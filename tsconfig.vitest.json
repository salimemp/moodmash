{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./**/*.test.ts",
    "./**/*.test.tsx",
    "vitest.config.ts",
    "vitest.setup.ts"
  ]
} 